<div class="registration">
  <h2>Личные данные</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "yellow_form"}) do |f| %>

    <p>
      <%= f.label :name, 'Имя, фамилия:' %>
      <%= f.text_field :name, :class => "standart_inptxt" %>
      <span class="error"><%= resource.errors[:name].first %></span>
    </p>

    <p>
      <%= f.label :email, 'Email:' %>
      <%= f.text_field :email, :class => "standart_inptxt" %>
      <span class="error"><%= resource.errors[:email].first %></span>
    </p>
    
    <p>
      <%= f.label :phone, 'Телефон:' %>
      <%= f.text_field :phone, :class => "standart_inptxt" %>
      <span class="error"><%= resource.errors[:phone].first %></span>
    </p>

    <p>
      <%= f.submit "Изменить", :class => "blue_inp_bg" %>
    </p>
    
  <% end %>

  <h2>Смена пароля</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "yellow_form"}) do |f| %>

    <p>
      <%= f.label :password, 'Пароль:' %>
      <%= f.password_field :password, :class => "standart_inptxt" %>
      <span class="error"><%= resource.errors[:password].first %></span>
    </p>
    
    <p>
      <%= f.label :password_confirmation, 'Пароль еще раз:' %>
      <%= f.password_field :password_confirmation, :class => "standart_inptxt" %>
    </p>

    <p>
      <%= f.label :current_password, 'Текущий пароль:' %>
      <%= f.password_field :current_password, :class => "standart_inptxt" %>
      <span class="error"><%= resource.errors[:current_password].first %></span>
    </p>

    <p>
      <%= f.submit "Изменить", :class => "blue_inp_bg" %>
    </p>
    
  <% end %>

</div>
