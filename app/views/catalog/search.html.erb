<div class="objects_found">
  Найдено страниц: <%= @pages.try(:count) || 0 %>
</div>

<ul class="search block-ul">
  <% @pages.each do |page| -%>
    <li>
      <%= link_to page.title, static_page_path(page.url_path) %>
      <span><%=raw "#{strip_tags(page.content)[0..100]}..." %></span>
  </li>
  <% end -%>
</ul>

