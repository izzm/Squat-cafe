<div id="login">
  <h2><%= t("active_admin.login.forgot_your_password") %></h2>

  <%= active_admin_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| 
    f.inputs do
      f.input :email
    end
    
    f.buttons do
      f.commit_button t("activerecord.actions.#{resource_name}.change_my_password")
    end
  end %>
  
  <%= render :partial => "active_admin/devise/shared/links" %>
</div>
