<%= semantic_form_for [:admin, @static_page] do |f| %>
  <%= f.inputs :info do %>
    <%= f.input :parent, :as => :nested_set %>
    <%= f.input :title %>
    <%= f.input :content , :as => :ckeditor, 
                  :input_html => { :cols => 0, 
                                   :width => '77%',
                                   :resize_dir => 'vertical' }%>
  <% end %>

  <%= f.inputs :seo do %>
    <%= f.input :seo_title %>
    <%= f.input :seo_description %>
    <%= f.input :seo_keywords %>
  <% end %>

  <%= f.inputs :control do %>
    <%= f.input :link %>
    <%= f.input :redirect_url, :as => :string %>
    <%= f.input :visible %>
    <%= f.input :show_in_nav %>
  <% end %>
  
  <%= f.buttons %>
<% end %>

<%= render(:partial => 'admin/attachments/list',
           :locals => { :object => @static_page }) if !@static_page.new_record?  %>

