<table border="0" cellspacing="0" cellpadding="0" id="static_pages" class="index_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Visible</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
  <% odd = true -%>
  <% render_table_tree @static_pages, 
                       :sort => lambda{|x| x.position} do |page, child| %>
    <tr class="<%= (odd = !odd) ? 'odd' : 'even' %>" id="static_page_#{page_id}">
      <td>
        <%=raw ('|'+('&nbsp'*5)) * (page.depth || 0) %>|-
        <%= link_to page.title, edit_admin_static_page_path(page) %>
      </td>
      <td><%= page.link %></td>
      <td>
        <span class="status <%= page.visible ? 'ok' : 'error' %>"><%= page.visible %></span>
      </td>
      <td>
        <%= link_to 'Destroy', admin_static_page_path(page), :method => :delete, :confirm => t('are_you_shure') %>
      </td>
    </tr>
  <% end %>


  </tbody>
</table>

