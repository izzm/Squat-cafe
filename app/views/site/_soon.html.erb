<div class="clearfix"></div>
<div class="fName">СКОРО</div>
<div class="events">
  <a href="#" class="arrow-left"></a>
	<div id="carousel">
  	<ul class="block-ul slider">
      <% Event.site_future.limit(12).each do |event| -%>
  	  <li class="slider-item">
        <%= link_to events_bydate_path(:date => Russian.strftime(event.date, '%d.%m.%Y') ), :class => 'slider-item-a' do %>
  			  <div class="slider-item-img ">
            <% if event.attachments.count > 0 -%>
              <%= image_tag event.attachments.first.image.url(:main_page_images_small) %>
            <% else -%>
              <%= image_tag 'site/slider.jpg'%>
            <% end -%>
          </div>
  				<div class="slider-item-date "><%= event.date.strftime('%d.%m %H:%M') %></div>
  				<div class="slider-item-title"><%= event.name %></div>
  				<div class="slider-item-more">подробнее</div>
  				<div class="clearfix"></div>
        <% end %>
  		</li>
      <% end -%>
  	</ul>
  </div>
	<a href="#" class="arrow-right"></a>
</div>

<% content_for :page_javascript do -%>
$(function() {
  $("#carousel").jCarouselLite({
    btnNext: ".arrow-right",
    btnPrev: ".arrow-left",
    circular: false
  });

  $('.arrow-right, .arrow-left').click(function() {
    return false;
  });
});

<% end-%>
